---
import Layout from "../layouts/Layout.astro";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfolio Web</title>
</head>
<body>
  <div class="absolute w-full h-full">
    <div class="absolute inset-0 content-wrapper backdrop-blur-sm backdrop-brightness-250 md:backdrop-filter-md z-0"></div>
    <div class="relative w-full h-full z-10">
      <Layout />
    </div>
  </div>
</body>
</html>

<style is:global>
  html {
    font-family: system-ui, -apple-system, sans-serif;
  }

  body {
    justify-content: center;
    background-image: url('../../public/fondo4.webp');
    background-size: cover;
    background-position: center;
  }

  .Contenent-general {
    color: #007bff;
    text-align: center;
    font-family: sans-serif;
    padding-top: 100px;
  }

  .wrapper {
    display: grid;
    margin: 0 auto;
    max-width: 960px;
    grid-template-columns: repeat(2, 2fr);
    grid-auto-rows: minmax(200px, auto);
    grid-gap: 10px;
  }

  .wrapper .gn {
    border: 3px solid rgb(44, 130, 210);
    border-radius: 15px;
  }

  .grid1 {
    grid-column: 1/2;
    grid-row: 1/2;
  }

  .grid2 {
    grid-column: 2/2;
    grid-row: span 2;
  }

  .grid3 {
    grid-column: 1/2;
    grid-row: 2/2;
  }

  .grid4 {
    grid-column: 1/4;
    grid-row: 3/3;
  }
  .segundo{
    color: #ffffff;
  }
  .tercero{
    color: #cbb5b5;
  }
</style>

